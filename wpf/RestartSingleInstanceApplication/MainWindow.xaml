<Window x:Class="RestartSingleInstanceApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RestartSingleInstanceApplication"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="SingleInstanceApp" Height="450" Width="800">
    <StackPanel
        VerticalAlignment="Center">
        <TextBlock
            FontSize="20"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Text="Hello,WPF Application!" />

        <Button 
            Width="120"
            Height="30"
            Margin="0 30 0 0"
            Content="Restart" Click="Button_Click"/>
    </StackPanel>
</Window>